<%= render partial: "layouts/navbar" %>
<div class="l-container l-content">
  <div class="l-fluid-fixed">
    <div class="sc-border-light-right l-main">
      <div class="l-tabs">
        <div class="streamExploreTabs">
          <%= render partial: "layouts/categories" %>
          <div class="row">
            <% @followings.each do |following| %>
              <div class="col-sm-3 col-lg-3 col-md-3 col-md-3">
                <div class="">
                  <%= link_to image_tag(following[:avatar_url]), following[:permalink_url] %>
                  <h4><%= following[:username] %></h4>
                  <%= button_to "Unfollow", {class: "sc-button-follow sc-button sc-button-small sc-button-responsive sc-button-selected", controller: "followings", :action => "unfollow", id: following[:id], :user_id=> session[:user_id]}, :method=>:post %>
                  <br/>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>